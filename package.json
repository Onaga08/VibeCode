{
  "name": "funnycode",
  "displayName": "FunnyCode",
  "description": "Adds a little decoration above the written text.",
  "publisher": "ExBrain",
  "icon": "images/icon.jpg",
  "version": "1.0.4",
  "repository": {
    "url": "https://github.com/exbraiin/FunnyCode"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Themes"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:funnyCode.activateFunnyMode"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "funnycode.toggleEnable",
        "title": "Toggle Funny Code"
      },
      {
        "command": "funnyCode.activateFunnyMode",
        "title": "FunnyCode: Activate Funny Mode"
      }
    ],
    "configuration": [
      {
        "title": "General",
        "properties": {
          "funnycode.enabled": {
            "order": 0,
            "type": "boolean",
            "default": true,
            "description": "Enables funny code!"
          },
          "funnycode.cursor": {
            "order": 1,
            "type": "boolean",
            "default": false,
            "description": "Enables funny code \"cursor\" animation!"
          },
          "funnycode.grayscale": {
            "order": 1,
            "type": "boolean",
            "default": false,
            "description": "Enables funny code \"grayscale\" mode!"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint 'src/**/*.ts'",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.57.1",
    "glob": "^10.4.5",
    "globals": "^16.0.0",
    "mocha": "^10.8.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.31.0"
  }
}
